//Write a program to concatenate two strings and display the result.
#include <stdio.h>
void joinstrings(char* str1, char* str2, char* result) {
  int i = 0;
  while (str1[i] != '\0') {
    result[i] = str1[i];
    i++;
  }
  int j = 0;
  while (str2[j] != '\0') {
    result[i + j] = str2[j];
    j++;
  }
  result[i + j] = '\0';
}

int main(void) {
  char str1[6] = "melody";
  char str2[7] = "macaron";
  char join[13];

 joinstrings(str1, str2, join);

  printf("Concatenated string: %s\n", join);

  return 0;
}
